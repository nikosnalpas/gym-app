{
  "expo": {
    "name": "Personal Studio Ioannou",
    "slug": "personal-studio-ioannou",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#363636"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "gr.paliaflorina.personalstudio",
      "supportsTablet": false,
      "infoPlist": {
        "NSCameraUsageDescription": "Επιτρέψτε την κάμερα για αποστολή φωτογραφιών",
        "NSPhotoLibraryAddUsageDescription": "Αποθήκευση αρχείων από την εφαρμογή",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "gr.paliaflorina.personalstudio",
      "permissions": [
        "INTERNET",
        "CAMERA",
        "READ_MEDIA_IMAGES",
        "POST_NOTIFICATIONS"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#363636"
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 24,
            "compileSdkVersion": 35,
            "targetSdkVersion": 35
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "6f6edf60-1397-4e2d-8aa8-709d897ef8f4"
      }
    }
  }
}
